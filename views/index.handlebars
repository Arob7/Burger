<h1>EAT-DA-BURGERS!</h1>
<div class="burgers">
    <h2>Burgers to eat!</h2>

    <ul>
        {{#each burgers}}
        {{#unless devoured}}
        <button class="change-burg" data-id="{{id}}">EAT!</button> {{this.burger_name}}
        {{/unless}}
        {{/each}}
    </ul>
</div>
<div class="devoured">
    <h2>Burgers that have been devoured!!</h2>

    <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{this.burger_name}}
        {{/if}}
        {{/each}}
    </ul>
</div>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="newBurger">Burger Name:</label>
        <input type="text" id="newBurger" name="name">
    </div>


    <button id="new-burg" type="submit">Add Burger</button>
</form>